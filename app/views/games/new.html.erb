<div class="container">
  <h1>New game</h1>
  <ul class= "letters">
    <%@letters.each do |letter|%>
    <li> <%=letter.capitalize%></li>
    <% end %>
  </ul>
  <p>What is the longest word you can find?</p>
  <form action="score" method='POST'data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
   <div class="input-group">
    <input type="text" name="new" class="form-control">
    <input type="submit" value="Play" class="btn btn-light">
    </div>
  </form>
</div>
